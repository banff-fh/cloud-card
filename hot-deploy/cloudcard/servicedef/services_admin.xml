<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>cloudCard Admin page Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service name="createCloudCardStore" engine="java"
        invoke="createCloudCardStore" location="com.banfftech.cloudcard.admin.CloudCardStoreAdminServices" auth="true">
        <description>创建云卡商家</description>
		<attribute mode="IN" name="storeName" type="String" optional="false"><description>商家名</description></attribute>
		<attribute mode="IN" name="description" type="String" optional="true"><description>描述</description></attribute>
		<attribute mode="IN" name="storeTeleNumber" type="String" optional="false"><description>商家联系电话</description></attribute>
		<attribute mode="IN" name="storeOwnerName" type="String" optional="true"><description>店主名</description></attribute>
		<attribute mode="IN" name="storeOwnerTeleNumber" type="String" optional="true"><description>店主手机号</description></attribute>
		<attribute mode="IN" name="geoCountry" type="String" optional="false"><description>国家GeoId</description></attribute>
		<attribute mode="IN" name="geoProvince" type="String" optional="false"><description>省、直辖市GeoId</description></attribute>
		<attribute mode="IN" name="geoCity" type="String" optional="false"><description>市GeoId</description></attribute>
		<attribute mode="IN" name="geoCounty" type="String" optional="false"><description>县GeoId</description></attribute>
		<attribute mode="IN" name="address1" type="String" optional="false"><description>详细地址1</description></attribute>
		<attribute mode="IN" name="address2" type="String" optional="true"><description>详细地址2</description></attribute>
		<attribute mode="IN" name="postalCode" type="String" optional="true"><description>邮编</description></attribute>
		<attribute mode="IN" name="longitude" type="String" optional="true"><description>经度</description></attribute>
		<attribute mode="IN" name="latitude" type="String" optional="true"><description>纬度</description></attribute>
		<attribute mode="IN" name="aliPayAccount" type="String" optional="true"><description>店家支付宝账号</description></attribute>
		<attribute mode="IN" name="aliPayName" type="String" optional="true"><description>店家支付宝姓名</description></attribute>
		<attribute mode="IN" name="wxPayAccount" type="String" optional="true"><description>店家微信账号</description></attribute>
		<attribute mode="IN" name="wxPayName" type="String" optional="true"><description>店家微信姓名</description></attribute>
		<attribute mode="IN" name="allowCrossStorePay" type="String" optional="false"><description>是否允许本店卡跨店付款 Y/N</description></attribute>
		<attribute mode="IN" name="level" type="String" optional="false"><description>信用等级</description></attribute>
		<attribute mode="IN" name="storeSaleLevel" type="String" optional="false"><description>店铺销售等级</description></attribute>
		<attribute mode="IN" name="creditLimit" type="BigDecimal" optional="false"><description>卖卡限额</description></attribute>

		<attribute mode="OUT" name="storeId" type="String" optional="true"><description>返回的storeId</description></attribute>
    </service>
</services>