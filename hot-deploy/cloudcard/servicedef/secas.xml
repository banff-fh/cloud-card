<service-eca xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/service-eca.xsd">
        
	<!-- 授权成功后通知用户 -->
    <eca service="createCardAuth" event="return">
        <set field-name="appType" value="user"/>
        <set field-name="sendType" value="one"/>
        <set field-name="content" value="你的好友授权了一张云卡给你" />
        <set field-name="partyId" env-name="customerPartyId" />
        <action service="pushNotifOrMessage"  mode="async"/>
    </eca>

	<!-- 商家扫码收款成功后通知用户 -->
    <eca service="receiptByCardCode" event="return">
        <set field-name="appType" value="user"/>
        <set field-name="sendType" value="one"/>
        <set field-name="content" value="付款成功" />
        <set field-name="partyId" env-name="customerPartyId" />
        <set field-name="message" value='{"type":"payment","cardId":"${cardId}","amount":"${amount}","cardBalance":"${cardBalance}"}' />
        <action service="pushNotifOrMessage"  mode="async"/>
    </eca>

    <!-- 用户扫商家码付款成功通知店家  需要通过tag的方式给一个商家下的所有店长/收银员推送-->
    <eca service="customerWithdraw" event="return">
        <set field-name="appType" value="biz"/>
        <set field-name="sendType" value="tag"/>
        <set field-name="content" value="收到用户付款: ${amount} 元" />
        <set field-name="tag" env-name="storeId" />
        <set field-name="message" value='{"type":"payment","cardId":"${cardId}","amount":"${amount}"}' />
        <action service="pushNotifOrMessage"  mode="async"/>
    </eca> 


    <!-- 商家扫码充值成功后通知用户 -->
    <eca service="activateCloudCardAndRecharge" event="return">
        <set field-name="appType" value="user"/>
        <set field-name="sendType" value="one"/>
        <set field-name="content" value="充值成功" />
        <set field-name="partyId" env-name="customerPartyId" />
        <set field-name="message" value='{"type":"recharge","cardId":"${cardId}","amount":"${amount}","cardBalance":"${cardBalance}"}' />
        <action service="pushNotifOrMessage"  mode="async"/>
    </eca>

    <!-- 云卡转让入参校验 -->
    <eca service="modifyCardOwner" event="in-validate">
        <action service="modifyCardOwnerInputValidate"  mode="sync" ignore-error="false" ignore-failure="false"/>
    </eca>
	
</service-eca>
