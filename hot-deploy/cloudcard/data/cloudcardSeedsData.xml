<entity-engine-xml>
	
	<!-- 尽量做到在系统初始化时候不需要 load-demo, 只需要 load-seed 就可以使用 -->

	<!-- 云卡平台超级管理员作为seed数据 -->
    <Party partyId="ccadmin" partyTypeId="PERSON"/>
    <Person firstName="云卡超级管理员"  partyId="ccadmin" personalTitle="Mr."/>
    <PartyRole partyId="ccadmin" roleTypeId="BUYER"/>
    <PartyRole partyId="ccadmin" roleTypeId="MANAGER"/>
    <PartyRole partyId="ccadmin" roleTypeId="ORDER_CLERK"/>
    <PartyRole partyId="ccadmin" roleTypeId="SHIPMENT_CLERK"/>
    <PartyRole partyId="ccadmin" roleTypeId="SALES_REP"/>
    <PartyRole partyId="ccadmin" roleTypeId="_NA_"/>
    
    <UserLogin userLoginId="ccadmin" currentPassword="{SHA}47ca69ebb4bdc9ae0adec130880165d2cc05db1a" passwordHint="" partyId="ccadmin"/>
    
    <!-- 目前暂时给全部权限 -->
    <UserLoginSecurityGroup groupId="FULLADMIN" userLoginId="ccadmin" fromDate="2001-01-01 12:00:00.0"/>

	<Party partyId="Platform" partyTypeId="PARTY_GROUP"/>
    <PartyGroup partyId="Platform" groupName="云卡支付平台"/>
    <PartyRole partyId="Platform" roleTypeId="BILL_FROM_VENDOR"/>
    <PartyRole partyId="Platform" roleTypeId="BILL_TO_CUSTOMER"/>
    <PartyRole partyId="Platform" roleTypeId="INTERNAL_ORGANIZATIO"/>
    <PartyRole partyId="Platform" roleTypeId="_NA_"/>
	


    <!-- make ccadmin an employee of Platform -->
    <PartyRole partyId="ccadmin" roleTypeId="CONTACT"/>
    <PartyRole partyId="Platform" roleTypeId="ACCOUNT"/>
    <PartyRelationship partyIdFrom="Platform" roleTypeIdFrom="ACCOUNT" partyIdTo="ccadmin" roleTypeIdTo="CONTACT" fromDate="2000-01-01 00:00:00.000" partyRelationshipTypeId="EMPLOYMENT"/>

</entity-engine-xml>
