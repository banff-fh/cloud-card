<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
	
    <screen name="main">
        <section>
            <actions>
                <set field="headerItem" value="main"/><!-- this highlights the selected menu-item with name "main" -->
            </actions>
            <widgets>
                <decorator-screen name="cloudcardCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="findCard">
       <section>
            <actions>
                <set field="titleProperty" value="PageTitleFindCatalog"/>
                <set field="headerItem" value="catalogs"/>
                <set field="tabButtonItem" value="FindCard"/>
                <set field="labelTitleProperty" value="ProductCatalog"/>
            </actions>
            <widgets>
                <decorator-screen name="cloudcardCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                <decorator-screen name="FindScreenDecorator" location="component://common/widget/CommonScreens.xml">
                                    <decorator-section name="search-options">
                                        <include-form name="findCard" location="component://cloudcard/widget/CloudCardCardInfoForms.xml"/>
                                    </decorator-section>
                                    <decorator-section name="search-results">
                                        <include-form name="ListCard" location="component://cloudcard/widget/CloudCardCardInfoForms.xml"/>
                                    </decorator-section>
                                </decorator-screen>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

	<screen name="createCardNumber">
		<section>
			<actions>
				<set field="headerItem" value="main" />
			</actions>
			<widgets>
				<decorator-screen name="cloudcardCommonDecorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

</screens>