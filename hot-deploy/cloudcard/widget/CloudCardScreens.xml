<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
	
    <screen name="main">
        <section>
            <actions>
                <set field="headerItem" value="main"/><!-- this highlights the selected menu-item with name "main" -->
            </actions>
            <widgets>
                <decorator-screen name="cloudcardCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="findCard">
       <section>
            <actions>
                <set field="titleProperty" value="PageTitleFindCard"/>
                <set field="headerItem" value="cards"/>
                <set field="tabButtonItem" value="FindCard"/>
            </actions>
            <widgets>
                <decorator-screen name="cloudcardCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                <decorator-screen name="FindScreenDecorator" location="component://common/widget/CommonScreens.xml">
                                    <decorator-section name="search-options">
                                        <include-form name="findCard" location="component://cloudcard/widget/CloudCardCardInfoForms.xml"/>
                                    </decorator-section>
                                    <decorator-section name="search-results">
										<section>
											<widgets>
												<container style="button-bar button-style-1">
													<link target="exportCardExcel"  target-type="content" description="${uiLabelMap.exportCard}" text="${uiLabelMap.exportCard}">
														<parameter param-name="distributorPartyId" from-field="parameters.distributorPartyId" />
														<parameter param-name="finAccountName" from-field="parameters.finAccountName" />
														<parameter param-name="statusId" from-field="parameters.statusId" />
													</link>
												</container>
											</widgets>
										</section>
                                        <include-form name="ListCard" location="component://cloudcard/widget/CloudCardCardInfoForms.xml"/>
                                    </decorator-section>
                                </decorator-screen>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

	<screen name="createCard">
		<section>
            <actions>
<!--                 <set field="titleProperty" value="PageTitleEditProductCatalog"/> -->
<!--                 <set field="tabButtonItem" value="productcatalog"/> -->
<!--                 <set field="partyId" from-field="parameters.partyId"/> -->
            </actions>
            <widgets>
                <decorator-screen name="cloudcardCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <screenlet title="${uiLabelMap.PageTitleEditCardInformation}">
                            <include-form name="EditCard" location="component://cloudcard/widget/CloudCardCreateCardForms.xml"/>
                        </screenlet>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
	</screen>

</screens>