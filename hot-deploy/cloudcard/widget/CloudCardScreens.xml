<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
	<screen name="CommonFinAccountDecorator">
        <section>
            <actions>
               
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="pre-body">
                        <section>
                            <widgets>
                                <section>
                                    <widgets>
                                        <include-menu name="CloudCardTabBar" location="component://accounting/widget/CloudCardAccountingMenus.xml"/>
                                    </widgets>
                                    <fail-widgets>
                                        <include-menu name="CloudCardMainTabBar" location="component://accounting/widget/CloudCardAccountingMenus.xml"/>
                                    </fail-widgets>
                                </section>
                            </widgets>
                        </section>
                    </decorator-section>
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <not><if-service-permission service-name="acctgFinAcctPermissionCheck" main-action="VIEW"/></not>
                            </condition>
                            <widgets>
                                <label style="h3" text="${uiLabelMap.AccountingViewPermissionError}"/>
                            </widgets>
                        </section>
                        <decorator-section-include name="body"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
	
    <screen name="main">
        <section>
            <actions>
                <set field="headerItem" value="main"/><!-- this highlights the selected menu-item with name "main" -->
            </actions>
            <widgets>
                <decorator-screen name="cloudcardCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

	<screen name="markCard">
		<section>
			<actions>
				<set field="headerItem" value="main" />
			</actions>
			<widgets>
				<decorator-screen name="cloudcardCommonDecorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
    
    <screen name="findCardNumber">
       <section>
			<actions>
				<set field="headerItem" value="main" />
			</actions>
			<widgets>
				<decorator-screen name="cloudcardCommonDecorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
    </screen>

	<screen name="createCardNumber">
		<section>
			<actions>
				<set field="headerItem" value="main" />
			</actions>
			<widgets>
				<decorator-screen name="cloudcardCommonDecorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

</screens>