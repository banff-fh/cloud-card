<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
	
    <screen name="main">
        <section>
            <actions>
                <set field="headerItem" value="main"/><!-- this highlights the selected menu-item with name "main" -->
            </actions>
            <widgets>
                <decorator-screen name="cloudcardCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

	<screen name="LookupCloudCardSeller" use-cache="true">
		<section>
			<condition>
				<if-service-permission service-name="partyBasePermissionCheck" main-action="VIEW" />
			</condition>
			<actions>
				<property-map resource="cloudcardUiLabels" map-name="uiLabelMap" global="true" />
				<property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true" />
			</actions>
			<widgets>
				<decorator-screen name="LookupDecorator" location="component://common/widget/CommonScreens.xml">
					<decorator-section name="search-options">
						<include-form name="LookupCloudCardSeller" location="component://cloudcard/widget/LookupForms.xml" />
					</decorator-section>
					<decorator-section name="search-results">
						<include-form name="listLookupCloudCardSeller" location="component://cloudcard/widget/LookupForms.xml" />
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

    <screen name="findCard">
       <section>
            <actions>
                <set field="titleProperty" value="PageTitleFindCard"/>
                <set field="headerItem" value="cards"/>
                <set field="tabButtonItem" value="FindCard"/>
            </actions>
            <widgets>
                <decorator-screen name="cloudcardCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                <decorator-screen name="FindScreenDecorator" location="component://common/widget/CommonScreens.xml">
                                    <decorator-section name="search-options">
                                        <include-form name="findCard" location="component://cloudcard/widget/CloudCardCardInfoForms.xml"/>
                                    </decorator-section>
                                    <decorator-section name="search-results">
										<section>
											<widgets>
												<container style="button-bar button-style-1">
													<link target="exportCardExcel" text="${uiLabelMap.exportCard}" url-mode="intra-app">
														<parameter param-name="distributorPartyId" from-field="parameters.distributorPartyId" />
														<parameter param-name="finAccountName_op" from-field="parameters.finAccountName_op" />
														<parameter param-name="finAccountName" from-field="parameters.finAccountName" />
														<parameter param-name="cardCode"  from-field="parameters.cardCode"/>
														<parameter param-name="ownerPartyId"  from-field="parameters.ownerPartyId"/>
														<parameter param-name="partyId"  from-field="parameters.partyId"/>
														<parameter param-name="statusId" from-field="parameters.statusId" />
														<parameter param-name="filterByDate" from-field="parameters.filterByDate" />
													</link>
												</container>
											</widgets>
										</section>
                                        <include-form name="ListCard" location="component://cloudcard/widget/CloudCardCardInfoForms.xml"/>
                                    </decorator-section>
                                </decorator-screen>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

	<screen name="createCard">
		<section>
            <widgets>
                <decorator-screen name="cloudcardCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <screenlet title="${uiLabelMap.PageTitleEditCardInformation}">
                            <include-form name="EditCard" location="component://cloudcard/widget/CloudCardCardInfoForms.xml"/>
                        </screenlet>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
	</screen>

    <screen name="settlement">
       <section>
            <actions>
                <set field="titleProperty" value="PageTitleSettlement"/>
                <set field="headerItem" value="cards"/>
                <set field="tabButtonItem" value="settlement"/>
            </actions>
            <widgets>
                <decorator-screen name="cloudcardCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                <decorator-screen name="FindScreenDecorator" location="component://common/widget/CommonScreens.xml">
                                    <decorator-section name="search-options">
                                        <include-form name="FindSettlement" location="component://cloudcard/widget/CloudCardCardInfoForms.xml"/>
                                    </decorator-section>
                                    <decorator-section name="search-results">
										<section>
											<widgets>
												<container style="button-bar button-style-1">
													<link target="settlementHistory" text="${uiLabelMap.settlementHistory}"></link>
												</container>
											</widgets>
										</section>
                                        <include-form name="ListSettlement" location="component://cloudcard/widget/CloudCardCardInfoForms.xml"/>
                                    </decorator-section>
                                </decorator-screen>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="crossStorePayment">
       <section>
            <actions>
                <set field="titleProperty" value="PageTitleCrossStorePaymen"/>
                <set field="headerItem" value="cards"/>
                <set field="tabButtonItem" value="crossStorePaymen"/>
            </actions>
            <widgets>
                <decorator-screen name="cloudcardCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                <decorator-screen name="FindScreenDecorator" location="component://common/widget/CommonScreens.xml">
                                    <decorator-section name="search-options">
                                        <include-form name="FindCrossStorePayment" location="component://cloudcard/widget/CloudCardCardInfoForms.xml"/>
                                    </decorator-section>
                                    <decorator-section name="search-results">
										<section>
											<widgets>
												<container style="button-bar button-style-1">
													<link target="settlementHistory" text="${uiLabelMap.settlementHistory}"></link>
												</container>
											</widgets>
										</section>
                                        <include-form name="ListCrossStorePayment" location="component://cloudcard/widget/CloudCardCardInfoForms.xml"/>
                                    </decorator-section>
                                </decorator-screen>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="settlementHistory">
       <section>
            <actions>
                <set field="titleProperty" value="PageTitleSettlementHistory"/>
                <set field="headerItem" value="cards"/>
                <set field="tabButtonItem" value="settlementHistory"/>
            </actions>
            <widgets>
                <decorator-screen name="cloudcardCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                <decorator-screen name="FindScreenDecorator" location="component://common/widget/CommonScreens.xml">
                                    <decorator-section name="search-options">
                                        <include-form name="FindSettlementHistory" location="component://cloudcard/widget/CloudCardCardInfoForms.xml"/>
                                    </decorator-section>
                                    <decorator-section name="search-results">
                                        <include-form name="ListSettlementHistory" location="component://cloudcard/widget/CloudCardCardInfoForms.xml"/>
                                    </decorator-section>
                                </decorator-screen>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

</screens>