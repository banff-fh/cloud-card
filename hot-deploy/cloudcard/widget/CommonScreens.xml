<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main-decorator">
        <section>
            <actions>
                <property-map resource="cloudcardUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>

                <set field="layoutSettings.companyName" from-field="uiLabelMap.cloudcardCompanyName" global="true"/>
                <set field="layoutSettings.companySubtitle" from-field="uiLabelMap.cloudcardCompanySubtitle" global="true"/>

                <set field="activeApp" value="cloudcard" global="true"/>
                <set field="applicationMenuName" value="MainAppBar" global="true"/>
                <set field="applicationMenuLocation" value="component://cloudcard/widget/CloudCardMenus.xml" global="true"/>
                <set field="applicationTitle" value="${uiLabelMap.cloudcardApplication}" global="true"/>
            </actions>
            <widgets>
                <include-screen name="ApplicationDecorator" location="component://commonext/widget/CommonScreens.xml"/>
            </widgets>
        </section>
    </screen>

    <screen name="cloudcardCommonDecorator">
        <section>
            <actions>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <if-has-permission permission="CLOUDCARD" action="_VIEW"/>
                            </condition>
                            <widgets>
                                <include-menu name="CardSubTabBar" location="component://cloudcard/widget/CardMenus.xml"/>
                                <decorator-section-include name="body"/>
                            </widgets>
                            <fail-widgets>
                                <label style="h3">${uiLabelMap.cloudcardViewPermissionError}</label>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <!-- 商家相关页面 模版 -->
    <screen name="CommonStoreDecorator">
        <section>
            <actions>
                <set field="headerItem" value="storeMenu"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="pre-body">
                        <section>
                            <condition>
                                <if-has-permission permission="CLOUDCARD" action="_VIEW"/>
                            </condition>
                            <widgets>
                                <include-menu name="StoreTabBar" location="component://cloudcard/widget/CloudCardMenus.xml"/>
                            </widgets>
                        </section>
                    </decorator-section>
                    <decorator-section name="body">
                        <section>
                            <!-- do check for CLOUDCARD, _VIEW permission -->
                            <condition>
                                <if-has-permission permission="CLOUDCARD" action="_VIEW"/>
                            </condition>
                            <widgets>
                                <decorator-section-include name="body"/>
                            </widgets>
                            <fail-widgets>
                                <label style="h3">${uiLabelMap.cloudcardViewPermissionError}</label>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

</screens>