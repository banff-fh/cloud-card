<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-form.xsd">
    
    <!-- 开店申请 查询条件表单-->
    <form name="FindCreateStoreApply" type="single" target="findCreateStoreApply" title="" 
        header-row-style="header-row" default-table-style="basic-table" >

        <field name="surveyResponseId" title="${uiLabelMap.createStoreApplyId}"><text-find /></field>
        <field name="storeName" title="${uiLabelMap.createStoreApplyStoreName}"><text-find /></field>
        <field name="teleNumber" title="${uiLabelMap.createStoreApplyTeleNumber}"><text-find /></field>
        <field name="address" title="${uiLabelMap.createStoreApplyAddress}"><text-find /></field>
        <field name="responseDate" title="${uiLabelMap.createStoreApplyDate}"><date-find/></field>

        <field name="statusId"  title="${uiLabelMap.statusId}">
            <drop-down allow-empty="true">
                <entity-options entity-name="StatusItem" description="${description}">
                    <entity-constraint name="statusTypeId" value="SURV_RESP_STATUS"/>
                </entity-options>
            </drop-down>
        </field>
        
        <field name="noConditionFind"><hidden value="Y"/></field>
        <field name="submitButton" title="${uiLabelMap.CommonFind}" widget-style="smallSubmit">
            <submit button-type="button"/>
        </field>
    </form>
    
    <!-- 开店申请 查询结果列表-->
    <form name="ListCreateStoreApply" list-name="listIt" target="" title="" type="list"  paginate-target="findCreateStoreApply" odd-row-style="alternate-row" default-table-style="basic-table hover-bar" header-row-style="header-row-2">
        <actions>
            <set field="entityName" value="CreateStoreApplyView"/>
            <service service-name="performFind" result-map="result" result-map-list="listIt">
                <field-map field-name="inputFields" from-field="parameters"/>
                <field-map field-name="entityName" from-field="entityName"/>
                <field-map field-name="orderBy" from-field="parameters.sortField"/>
                <field-map field-name="viewIndex" from-field="viewIndex"/>
                <field-map field-name="viewSize" from-field="viewSize"/>
                <field-map field-name="noConditionFind" value="Y"/>
            </service>
        </actions>
        <field name="surveyResponseId" title="${uiLabelMap.createStoreApplyId}" widget-style="buttontext" sort-field="true">
            <hyperlink description="${surveyResponseId}" target="" also-hidden="false">
                <parameter param-name="surveyResponseId"/>
            </hyperlink>
        </field>
        <field name="storeName"  title="${uiLabelMap.createStoreApplyStoreName}" ><display/></field>
        <field name="teleNumber"  title="${uiLabelMap.createStoreApplyTeleNumber}" ><display/></field>
        <field name="address"  title="${uiLabelMap.createStoreApplyAddress}" ><display/></field>
        <field name="statusId" title="${uiLabelMap.statusId}" sort-field="true"><display-entity entity-name="StatusItem"/></field>

        <field name="responseDate" sort-field="true"  title="${uiLabelMap.createStoreApplyDate}" ><display type="date-time"/></field>
        
        <field name="doApplyAccepted"><display/></field>
        <field name="doApplyAccepted" title="${uiLabelMap.CommonEmptyHeader}" widget-style="buttontext" use-when="${groovy: statusId == 'SRS_CREATED'}" >
            <hyperlink target="doApplyAccepted" description="${uiLabelMap.doApplyAccepted}" also-hidden="false" target-type="intra-app">
                <parameter param-name="surveyResponseId" />
            </hyperlink>
        </field>

        <field name="doApplyRejected"><display/></field>
        <field name="doApplyRejected" title="${uiLabelMap.CommonEmptyHeader}" widget-style="buttontext" use-when="${groovy: statusId == 'SRS_CREATED'}" >
            <hyperlink target="doApplyRejected" description="${uiLabelMap.doApplyRejected}" also-hidden="false" target-type="intra-app" 
            request-confirmation="true" 
            confirmation-message="${uiLabelMap.PlzConfirmRejectApply}">
                <parameter param-name="surveyResponseId" />
            </hyperlink>
        </field>
        <on-event-update-area event-type="paginate" area-id="search-results" area-target="ListCreateStoreApplySearchResults"/>
    </form>
    
    <!-- 圈子查询 查询条件表单 -->
    <form name="FindCloudCardGroup" type="single" target="findCloudCardGroup" title="" 
        header-row-style="header-row" default-table-style="basic-table" >

        <field name="partyIdFrom" title="${uiLabelMap.FindGroupPartyId}"><text-find /></field>
        <field name="fromGroupName" title="${uiLabelMap.FindGroupGroupName}"><text-find /></field>
        <field name="fromDate" title="${uiLabelMap.FindGroupFromDate}"><date-find/></field>
        <field name="noConditionFind"><hidden value="Y"/></field>
        <field name="submitButton" title="${uiLabelMap.CommonFind}" widget-style="smallSubmit">
            <submit button-type="button"/>
        </field>
    </form>
    <!-- 圈子查询 查询结果列表 -->
    <form name="ListCloudCardGroup" list-name="listIt" target="" title="" type="list"  paginate-target="findCloudCardGroup" odd-row-style="alternate-row" default-table-style="basic-table hover-bar" header-row-style="header-row-2">
        <actions>
            <set field="entityName" value="PartyRelationshipAndPartyDetail"/>
            <set field="parameters.roleTypeIdFrom" value="CC_STORE_GROUP"/>
            <set field="parameters.roleTypeIdTo" value="CC_SG_OWNER"/>
            <set field="parameters.filterByDate" value="Y"/>
            <service service-name="performFind" result-map="result" result-map-list="listIt">
                <field-map field-name="inputFields" from-field="parameters"/>
                <field-map field-name="entityName" from-field="entityName"/>
                <field-map field-name="orderBy" from-field="parameters.sortField"/>
                <field-map field-name="viewIndex" from-field="viewIndex"/>
                <field-map field-name="viewSize" from-field="viewSize"/>
                <field-map field-name="noConditionFind" value="Y"/>
            </service>
        </actions>
        <field name="partyIdFrom" title="${uiLabelMap.FindGroupPartyId}" widget-style="buttontext" sort-field="true">
            <hyperlink description="${partyIdFrom}" target="" also-hidden="false">
                <parameter param-name="partyIdFrom"/>
            </hyperlink>
        </field>
        <field name="fromGroupName"  title="${uiLabelMap.FindGroupGroupName}" ><display/></field>
        <field name="toGroupName"  title="${uiLabelMap.FindGroupGroupOwnerName}" ><display/></field>
        <field name="fromDate" sort-field="true"  title="${uiLabelMap.FindGroupFromDate}" ><display type="date-time"/></field>
        <on-event-update-area event-type="paginate" area-id="search-results" area-target="ListCloudCardGroupSearchResults"/>
    </form>
	
</forms>
