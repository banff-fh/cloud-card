<simple-methods xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/simple-methods-v2.xsd">

    <!-- Test case for get Login captcha process-->
	<simple-method method-name="testMyCloudCards" short-description="auto test testGetLoginCaptcha service" login-required="false"> -->
        <set field="serviceInMap.viewIndex" value="0" type="Integer"/>
        <set field="serviceInMap.viewSize" value="20" type="Integer"/>
        <entity-one entity-name="UserLogin" value-field="userLogin">
            <field-map field-name="userLoginId" value="system"/>
        </entity-one>
        <set field="serviceInMap.userLogin" from-field="userLogin"/>
        <log level="info" message="=============userLogin: ${userLogin}"/>
        
        <call-service service-name="myCloudCards" in-map-name="serviceInMap">
        	<result-to-field result-name="cloudCardList" />
        	<result-to-field result-name="listSize" />
        </call-service>
        
     	<log level="info" message="get myCloudCards successfully ${cloudCardList} and ${listSize}  "/>
        
    </simple-method>

</simple-methods>
